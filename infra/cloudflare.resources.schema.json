{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/cloudflare.resources.schema.json",
  "type": "object",
  "required": ["account_id", "d1", "queue", "secrets_store", "workers"],
  "properties": {
    "account_id": {
      "type": "string",
      "minLength": 1
    },
    "d1": {
      "type": "object",
      "required": ["name", "database_id", "migrations_dir"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "database_id": { "type": "string", "minLength": 1 },
        "migrations_dir": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "queue": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "secrets_store": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "workers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "config_path"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "config_path": { "type": "string", "minLength": 1 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
